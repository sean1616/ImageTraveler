<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Btn_Group_Style" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="IsEnabled" Value="True" />
    </Style>

    <Style x:Key="Btn_Grid_Style" TargetType="{x:Type Grid}">
        <Style.Triggers>
            <!--  路由事件  -->
            <EventTrigger RoutedEvent="Grid.MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation
                            FillBehavior="HoldEnd"
                            Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                            To="Transparent"
                            Duration="0:0:0.3" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="Grid.MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation
                            FillBehavior="HoldEnd"
                            Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                            To="Gray"
                            Duration="0:0:0.3" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="Grid.MouseDown">
                <BeginStoryboard>
                    <Storyboard>
                        <ColorAnimation
                            FillBehavior="Stop"
                            Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                            To="LightGray"
                            Duration="0:0:0.1" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <!--  Btn_load  -->
    <Style
        x:Key="Btn_load_Style"
        BasedOn="{StaticResource Btn_Group_Style}"
        TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid
                        Name="GridName"
                        Background="Transparent"
                        SnapsToDevicePixels="true"
                        Style="{StaticResource Btn_Grid_Style}">
                        <Grid.Triggers>
                            <!--  路由事件  -->
                            <EventTrigger RoutedEvent="Grid.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            FillBehavior="HoldEnd"
                                            Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                            To="Transparent"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Grid.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            FillBehavior="HoldEnd"
                                            Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                            To="Gray"
                                            Duration="0:0:0.3" />
                                        <ObjectAnimationUsingKeyFrames
                                            FillBehavior="HoldEnd"
                                            Storyboard.TargetName="ImageName"
                                            Storyboard.TargetProperty="Source"
                                            Duration="0:0:0.3">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <BitmapImage UriSource="../Resources/001-share.png" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeftButtonDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames
                                            FillBehavior="HoldEnd"
                                            Storyboard.TargetName="ImageName"
                                            Storyboard.TargetProperty="Source"
                                            Duration="0:0:0.05">
                                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <BitmapImage UriSource="../Resources/002-share-1.png" />
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Grid.MouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            FillBehavior="Stop"
                                            Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)"
                                            To="LightGray"
                                            Duration="0:0:0.1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.2*" />
                                <RowDefinition />
                                <RowDefinition Height="0.2*" />
                            </Grid.RowDefinitions>
                            <Rectangle
                                Grid.RowSpan="3"
                                Fill="Transparent"
                                StrokeThickness="2">
                                <!--<Rectangle.Stroke>
                                    <LinearGradientBrush StartPoint="{Binding sPosi}" EndPoint="{Binding Posi}">
                                        <GradientStop Offset="0" Color="Transparent" />
                                        <GradientStop Offset="1" Color="White" />
                                    </LinearGradientBrush>
                                </Rectangle.Stroke>-->
                            </Rectangle>
                            <Image
                                Name="ImageName"
                                Grid.Row="1"
                                Margin="0"
                                Source="../Resources/001-share.png"
                                Stretch="Uniform" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

